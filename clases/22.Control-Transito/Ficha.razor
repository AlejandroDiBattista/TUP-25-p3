@* Componente reutilizable para un botón de acción *@
    
<div class="card form-card">
    <h3>@titulo</h3>
    @ChildContent
    <div class="actions">
        <button class="btn" @onclick="onClick">@accion</button>
    </div>
</div>

@code {
    [Parameter] public string titulo { get; set; } = string.Empty;
    [Parameter] public string accion { get; set; } = string.Empty;
    [Parameter] public EventCallback onClick { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
