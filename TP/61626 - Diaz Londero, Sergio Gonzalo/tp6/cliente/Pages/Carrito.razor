@page "/carrito"
@using cliente.Services
@inject CarritoService CarritoService

<h3 class="text-center">Carrito de Compras</h3>

@if (CarritoService.Items.Count == 0)
{
    <p class="mt-2 mx-5">No hay productos en el carrito.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in CarritoService.Items)
            {
                <tr>
                    <td>@item.Producto.Nombre</td>
                    <td>$@item.Producto.Precio</td>
                    <td>@item.Cantidad</td>
                    <td>$@(item.Producto.Precio * item.Cantidad)</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => CarritoService.EliminarProducto(item.Producto.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: $@CarritoService.CalcularTotal()</h4>
    <button class="btn btn-warning" @onclick="CarritoService.VaciarCarrito">Vaciar Carrito</button>
}
