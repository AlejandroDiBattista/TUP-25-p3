@inherits LayoutComponentBase
@using cliente.Services

@inject CarritoService CarritoService

<div class="page">
    </div>
    <nav class="navbar tienda-navbar mb-4">
    <div class="container-fluid d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <span class="navbar-logo me-2">
                <svg width="28" height="28" fill="currentColor" viewBox="0 0 16 16">
                    <rect width="16" height="16" rx="4" fill="#fff"/>
                    <text x="8" y="12" text-anchor="middle" font-size="15" fill="#3358ff" font-family="Segoe UI, Arial, sans-serif">🛒</text>
                </svg>
            </span>
            <span class="navbar-title ms-2">
                <NavLink href="/" style="color: inherit; text-decoration: none; padding: 2.5px;">   
                    Mi Tienda Online
                </NavLink>
            </span>
        </div>
        <a class="btn btn-light tienda-cart ms-auto" href="/carrito" style="position: absolute; right: 60px; top: 15px;">
            <img src="imagenes/carrito4.jpg" alt="Carrito" style="width:75px; height:75px;">
        </a>
        <a href="/carrito" class="carrito-icono"></a>

        @if (CarritoService.CantidadTotal > 0)
        {
            <span class="badge bg-danger" style="position: absolute; right: 26px; top: 25px; font-size: 35px; color: white;">
                @CarritoService.CantidadTotal
            </span>
        }
    </div>
</nav>
<main>
    @Body
</main>

@code {
    private string busqueda = "";

}
