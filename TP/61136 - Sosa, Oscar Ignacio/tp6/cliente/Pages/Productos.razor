<div class="row">
    @foreach (var producto in productos)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@producto.Nombre</h5>
                    <p class="card-text">@producto.Descripcion</p>
                    <p class="card-text"><strong>Stock:</strong> @producto.Stock</p>
                    <p class="card-text"><strong>Precio:</strong> @producto.Precio.ToString("C")</p>
                </div>
            </div>
        </div>
    }
</div>

<NavLink class="btn btn-success" href="carrito.html" style="margin: 1rem;">Ver carrito</NavLink>

