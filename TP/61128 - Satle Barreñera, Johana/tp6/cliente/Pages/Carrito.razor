@page "/carrito"
@using cliente.Services
@inject CarritoService CarritoService
@implements IDisposable


<h3 style="text-align: center; padding-top: 10px;">üõí Carrito de Compras</h3>

@if (CarritoService.ProductosEnCarrito.Count == 0)
{
    <p style="text-align: center;">No hay productos en el carrito.</p>
}
else
{
    <div class="contenedor-carrito">
        <table class="tabla-carrito">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in CarritoService.ProductosEnCarrito)
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>$@producto.Precio</td>
                        <td>
                            <button class="btn-control" @onclick="() => CarritoService.DisminuirCantidad(producto.Id)">‚àí</button>
                            <span class="mx-2">@producto.Cantidad</span>
                            <button class="btn-control" @onclick="() => CarritoService.AumentarCantidad(producto.Id)">+</button>
                        </td>
                        <td>$@(producto.Precio * producto.Cantidad)</td>
                        <td>
                            <button class="btn-eliminar" @onclick="() => CarritoService.EliminarProducto(producto.Id)">üóëÔ∏è</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="total-carrito">Total: $@CarritoService.CalcularTotal()</h4>

        <button class="btn-vaciar" @onclick="CarritoService.LimpiarCarrito">Vaciar carrito üßπ</button>

        <a href="/confirmacion" class="btn btn-success" style="margin-left: 10px;">Confirmar compra ‚úÖ</a>
    </div>
}

@code {
    protected override void OnInitialized()
    {
        CarritoService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CarritoService.OnChange -= StateHasChanged;
    }
}
