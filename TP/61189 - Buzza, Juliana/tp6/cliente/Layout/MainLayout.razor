@inherits LayoutComponentBase
@inject cliente.Services.ApiService.CartStateService CartStateService
@inject NavigationManager Navigation

<div class="main-layout-container">
    <header class="fixed-header bg-beige text-brown p-4 shadow-md rounded-b-lg">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-3xl font-bold text-brown hover:text-darkbrown transition-colors duration-200" style="font-family: 'Inter', sans-serif;">
                <img src="/images/logo.png" alt="Logo de la Tienda de Calzado" class="h-12 inline-block mr-2 rounded-full shadow-sm">
                CalzadoEstilo
            </a>
            <div class="flex items-center space-x-6">
                <div class="relative w-64">
                    <input type="text"
                           @bind-value="SearchQuery"
                           @onkeyup="HandleSearch"
                           placeholder="Buscar calzado..."
                           class="w-full p-2 pl-10 rounded-full bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-brown-light focus:border-transparent transition-all duration-200 shadow-sm">
                    <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
                <a href="/carrito" class="relative text-brown hover:text-darkbrown transition-colors duration-200">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13H4m6 10a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path></svg>
                    @if (CartStateService.ItemCount > 0)
                    {
                        <span class="absolute -top-2 -right-2 bg-accent text-white rounded-full px-2 py-1 text-xs font-bold leading-none animate-bounce">
                            @CartStateService.ItemCount
                        </span>
                    }
                </a>
            </div>
        </div>
    </header>

    <main class="content-container pt-24 pb-8"> 
        <div class="container mx-auto px-4">
            @Body
        </div>
    </main>

    <footer class="bg-brown-dark text-white p-4 text-center mt-8 rounded-t-lg shadow-inner">
        <p>&copy; @DateTime.Now.Year CalzadoEstilo. Todos los derechos reservados.</p>
    </footer>
</div>

@code {
    private string SearchQuery { get; set; } = string.Empty; 

    protected override void OnInitialized()
    {
        CartStateService.OnCartItemCountChanged += StateHasChanged;
        CartStateService.OnCartIdChanged += StateHasChanged;
    }

    private void HandleSearch(KeyboardEventArgs e)
    {
        if (e.Code == "Enter" || e.Code == "NumpadEnter")
        {
            Navigation.NavigateTo($"/?SearchTerm={SearchQuery}"); 
        }
    }

    public void Dispose()
    {
        CartStateService.OnCartItemCountChanged -= StateHasChanged;
        CartStateService.OnCartIdChanged -= StateHasChanged;
    }
}
