@page "/compra-confirmada"
@inject NavigationManager NavManager

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-6">
    <div class="bg-white rounded-xl shadow-xl p-8 max-w-md text-center">
        <h1 class="text-3xl font-bold text-green-600 mb-4">¡Gracias por tu compra!</h1>
        <p class="text-gray-700 text-lg mb-6">Tu pedido ha sido confirmado correctamente.</p>
        <p class="text-gray-600 mb-6">Te enviaremos un correo con la información de seguimiento.</p>
        
        <button @onclick="VolverAlInicio"
                class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-md">
            Volver al catálogo
        </button>
    </div>
</div>

@code {
    void VolverAlInicio()
    {
        NavManager.NavigateTo("/");
    }
}
