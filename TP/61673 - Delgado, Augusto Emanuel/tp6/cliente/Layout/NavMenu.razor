@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu /> 
    </div>

    <main>
        <div class="top-row px-4">
            <a href="/carrito" class="ms-auto me-3">
                <i class="bi bi-cart"></i> Carrito (<span class="badge bg-secondary">@CarritoService.TotalItemsEnCarrito</span>)
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    @inject cliente.Services.CarritoService CarritoService

    protected override void OnInitialized()
    {
        CarritoService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CarritoService.OnChange -= StateHasChanged;
    }
}