@page "/carrito"
@using cliente.Services
@using cliente.Modelos 
@inject CarritoService CarritoService
@implements IDisposable


<h3 style="text-align: center; padding-top: 10px;">üõí Carrito de Compras</h3>

@if (CarritoService.ProductosEnCarrito.Count == 0) // Usas ProductosEnCarrito, lo mantuvimos en CarritoService
{
    <p style="text-align: center;">No hay productos en el carrito.</p>
}
else
{
    <div class="contenedor-carrito">
        <table class="tabla-carrito">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in CarritoService.ProductosEnCarrito) // Usas ProductosEnCarrito
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>$@producto.Precio</td>
                        <td>
                            <button class="btn-control" @onclick="() => DisminuirCantidadClick(producto.Id)">‚àí</button>
                            <span class="mx-2">@producto.Cantidad</span>
                            <button class="btn-control" @onclick="() => AumentarCantidadClick(producto.Id)">+</button>
                        </td>
                        <td>$@(producto.Precio * producto.Cantidad)</td>
                        <td>
                            <button class="btn-eliminar" @onclick="() => EliminarProductoClick(producto.Id)">üóëÔ∏è</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="total-carrito">Total: $@CarritoService.CalcularTotal()</h4>

        <button class="btn-vaciar" @onclick="LimpiarCarritoClick">Vaciar carrito üßπ</button>

        <a href="/confirmacion" class="btn btn-success" style="margin-left: 10px;">Confirmar compra ‚úÖ</a>
    </div>
}

@code {
    protected override void OnInitialized()
    {
        // Suscribirse a los cambios en el servicio
        CarritoService.OnChange += StateHasChanged;
        // Opcional: Cargar el carrito desde el backend al inicializar la p√°gina si el carritoId ya existe
        // await CarritoService.CargarCarritoDesdeBackendAsync(); // Si implementas esta funcionalidad
    }

    public void Dispose()
    {
        // Desuscribirse para evitar fugas de memoria
        CarritoService.OnChange -= StateHasChanged;
    }

    // --- NUEVOS M√âTODOS WRAPPER PARA LLAMAR A LOS M√âTODOS AS√çNCRONOS DEL SERVICIO ---

    private async Task AumentarCantidadClick(int productoId)
    {
        await CarritoService.AumentarCantidad(productoId);
    }

    private async Task DisminuirCantidadClick(int productoId)
    {
        await CarritoService.DisminuirCantidad(productoId);
    }

    private async Task EliminarProductoClick(int productoId)
    {
        await CarritoService.EliminarProducto(productoId); // Ahora es as√≠ncrono
    }

    private void LimpiarCarritoClick()
    {
        CarritoService.LimpiarCarrito(); // Este m√©todo es s√≠ncrono en la versi√≥n que te di.
    }
}