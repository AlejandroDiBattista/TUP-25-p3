@page "/compras"
@inject HttpClient Http

<h2>Listado de Compras</h2>

@if (compras == null)
{
    <p>Cargando...</p>
}
else if (!compras.Any())
{
    <p>No hay compras registradas.</p>
}
else
{
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Cantidad de Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compra in compras)
            {
                <tr>
                    <td>@compra.id</td>
                    <td>@DateTime.Parse(compra.fecha).ToString("dd/MM/yyyy")</td>
                    <td>@(compra.items?.Count ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<CompraDto>? compras;

    protected override async Task OnInitializedAsync()
    {
        compras = await Http.GetFromJsonAsync<List<CompraDto>>("http://localhost:5157/compras");
    }

    class CompraDto
    {
        public int id { get; set; }
        public string fecha { get; set; } = "";
        public List<ItemCompraDto>? items { get; set; }
    }

    class ItemCompraDto
    {
        public int id { get; set; }
        public int idProducto { get; set; }
        public int cantidad { get; set; }
    }
}
