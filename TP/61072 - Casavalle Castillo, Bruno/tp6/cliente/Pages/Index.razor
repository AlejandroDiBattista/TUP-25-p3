@page "/"
@inject ProductoService productoService

<h1>Catálogo</h1>

@if (productos is null)
{
    <p>Cargando...</p>
}
else
{
    <div class="row">
        @foreach (var p in productos)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@p.ImagenUrl" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@p.Nombre</h5>
                        <p class="card-text">@p.Descripcion</p>
                        <p><strong>$@p.Precio</strong> - Stock: @p.Stock</p>
                        <button class="btn btn-primary">Agregar al carrito</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    List<Producto>? productos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            productos = await productoService.ObtenerProductos();
            Console.WriteLine($"Productos cargados: {productos?.Count ?? 0}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando productos: {ex.Message}");
        }
    }
}