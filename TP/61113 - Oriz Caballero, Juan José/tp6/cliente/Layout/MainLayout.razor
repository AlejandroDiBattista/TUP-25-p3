@namespace Cliente.Layout
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject CarritoService CarritoService

<!-- Cabecera -->
<div class="header bg-white shadow-md px-6 py-4 flex items-center justify-between sticky top-0 z-10">
    <!-- Logo + Marca -->
    <div class="flex items-center gap-3 cursor-pointer" @onclick="@(() => Navigation.NavigateTo("/"))">
        <img src="icon-192.png" alt="Logo" class="h-14 w-14" />
        <span class="text-lg font-semibold leading-snug">
            Productos Regionales NOA <em>"Sabores Propios"</em>
        </span>
    </div>

    <!-- Carrito -->
    <div class="relative cursor-pointer" @onclick="@(() => Navigation.NavigateTo("/carrito"))">
        <span class="material-icons text-4xl">shopping_cart</span>
        @if (CarritoService.TotalItems > 0)
        {
            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 flex items-center justify-center rounded-full">
                @CarritoService.TotalItems
            </span>
        }
    </div>
</div>


<!-- Contenido -->
<div class="page p-4">
    @Body
</div>

@code {
    private string searchTerm = "";

    private void HandleSearchKey(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(searchTerm))
        {
            Navigation.NavigateTo($"/?search={Uri.EscapeDataString(searchTerm)}");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CarritoService.CargarCarrito();
    }
}
