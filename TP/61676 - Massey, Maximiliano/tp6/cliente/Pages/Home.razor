@page "/"
@using cliente.Services
@inject NotificationService NotificationService

<div class="home-container">
    <div class="bienvenida-box p-4 shadow-lg rounded-4 text-center fade-in">
        <h1 class="display-5 mb-3" style="color: #ff9800; text-shadow: 1px 1px 4px #b36b00;">Bienvenido a la tienda de juegos digitales</h1>
        <p class="lead">Por favor, disfruta de nuestro catálogo existente
                        y siéntete libre de explorar los productos disponibles.
        </p>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        // Mostrar notificación de bienvenida con un pequeño delay
        Task.Delay(500).ContinueWith(_ => 
        {
            NotificationService.ShowWelcome();
        });
    }
}
